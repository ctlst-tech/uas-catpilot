<?xml version="1.0" encoding="utf-8" ?>

<flow>
    <spec name="nav_compass">
        <inputs>
            <i alias="q" type="core.type.quat"/>
        </inputs>

        <outputs>
            <o alias="mag" type="core.type.v3f64"/>
        </outputs>
    </spec>

    <functions>
        <f name="mag1" by_spec="cube.sensors.ist8310"/>

        <f name="roll0" by_spec="core.source.constant">
            <param alias="value">0.0</param>
        </f>
        <f name="pitch0" by_spec="core.source.constant">
            <param alias="value">0.0</param>
        </f>
        <f name="yaw0" by_spec="core.source.constant">
            <param alias="value">0.0</param>
        </f>

        <f name="mag_concat" by_spec="core.math.vector3f64">
            <in alias="x">mag1/magx</in>
            <in alias="y">mag1/magy</in>
            <in alias="z">mag1/magz</in>
        </f>

        <f name="mag_calib" by_spec="core.vector.calib">
            <in alias="v">mag_concat/v</in>

            <param alias="a11">1.0</param>
            <param alias="a21">0.0</param>
            <param alias="a31">0.0</param>

            <param alias="a12">0.0</param>
            <param alias="a22">1.0</param>
            <param alias="a32">0.0</param>
    
            <param alias="a13">0.0</param>
            <param alias="a23">0.0</param>
            <param alias="a33">1.0</param>

            <param alias="b1">0.0</param>
            <param alias="b2">0.0</param>
            <param alias="b3">0.0</param>
        </f>

        <f name="mag_turn_quat" by_spec="core.quat.from_euler">
            <in alias="roll">roll0/output</in>
            <in alias="pitch">pitch0/output</in>
            <in alias="yaw">yaw0/output</in>
        </f>

        <f name="mag_rotate" by_spec="core.vector.qrotate">
            <in alias="v">mag_calib/v</in>
            <in alias="q">mag_turn_quat/q</in>
        </f>
    </functions>

    <link_outputs>
        <link alias="mag">mag_rotate/v</link>
    </link_outputs>
</flow>
